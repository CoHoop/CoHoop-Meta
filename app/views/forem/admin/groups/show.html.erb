<h2><%= t('forem.admin.group.members', :group => @group.name) %></h2>

<%= text_field_tag "new_member" %><%= button_tag t(".add_member"), :disabled => true, :id => "add_member", "data-group-id" => "#{@group.id}"  %>

<table id='members'>
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Delete</th>
  </thead>
  <tbody>
    <% @group.members.each do |member| %>
      <tr>
        <td><%= member.name || 'Not specified' %></td>
        <td><%= member.email %></td>
        <td>To implement</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= javascript_include_tag "forem/admin/members" %>
